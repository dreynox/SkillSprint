{
  "servers": {
    "io.github.github/github-mcp-server": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN=${input:token}",
        "ghcr.io/github/github-mcp-server:0.30.3",
        "stdio"
      ]
    }
  },
  "inputs": [
    {
      "id": "token",
      "type": "promptString",
      "password": true,
      "description": "GitHub Personal Access Token"
    }
  ]
}
